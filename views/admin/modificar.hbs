<div class="container" style="margin: 20px;">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Modificar la novedad</h4>
            <form action="/admin/Novedades/modificar" method="post" enctype="multipart/form-data">
                <input type="hidden" value='{{novedad.Id}}' name="Id">
                <div class="mb-3 row">
                    <input type="file" class="form-control" placeholder="Imagen" id="Imagen" value="{{novedad.imagen}}">
                    <p>
                        <label><input type="checkbox" name="Img_delete" id="Img_delete" value="1">Eliminar imagen
                            actual?</label>
                        <input type="hidden" name="Img_original" value="{{novedad.Img_id}}">
                    </p>
                </div>

                <div class="mb-3 row">
                    <label for="Titulo"></label>
                    <textarea type="text" class="form-control" name="Titulo" value="{{novedad.Titulo}}"></textarea>
                </div>

                <div class="mb-3 row">
                    <label for="Subtitulo"></label>
                    <textarea type="text" class="form-control" name="Subtitulo"
                        value="{{novedad.Subtitulo}}"></textarea>
                </div>
 
                <div class="mb-3 row">
                    <p>
                        <label Imagen: <input type="file" class="form-control" name="imagen" id="imagen"></label>
                    </p>
                </div>

                <div class="mb-3 row">
                    <textarea type="Cuerpo" class="form-control" enctype="multipart/form-data"
                        {{novedad.Cuerpo}}></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Modificar</button>
            </form>
        </div>
    </div>
</div>