<div class="container" style="margin-top: 100px;">
    <div class="row">
        <form action="/admin/login" method="post">
            <div class="mb-3 row">
                <div class="col-sn-10">
                    <label for="validationTooltip01" class="form-label">Usuario</label>
                    <input type="text" class="form-control" id="inputUser" placeholder="usuario" value="" required
                        name="usuario">
                </div>
                <div class="mb-3 row">
                    <div class="col-sn-10">
                        <label for="validationTooltip02" class="form-label">Contrasena</label>
                        <input type="password" class="form-control" id="inputPassword" placeholder="Contrasena" value=""
                            name="password">
                        <div class="valid-tooltip">
                            Looks good!
                        </div>
                    </div>
                    <div class="mb-3 row">
                        <button class="btn btn-primary" type="submit">Ingresar</button>
                    </div>
        </form>
        {{#if error}}
        <div class="alert alert-danger" role="alert">
            Usuario y/o contrasena incorrectos!
        </div>
        {{/if}}
    </div>
</div>